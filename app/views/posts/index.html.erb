<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-8 blog-main">

    <% @posts.each do |post| %>
      <div class="blog-post">
        <h2 class="blog-post-title"><%= link_to post.title, post %></h2>
        <p class="blog-post-meta"><%= post.created_at %> by Tom | 
          Tags:
          <% post.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag) %>
          <% end %>
        </p>
        <p> <%= post.content %> </p>
        <p class="video"><%= youtube_video post.video if post.video? %></p>
        <p class="image"><%= image_tag post.image.url if post.image? %></p>
      </div>
    <% end %>

    <%= will_paginate %>
  </div><!-- /.blog-main -->

    <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
